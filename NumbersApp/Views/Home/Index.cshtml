@model IEnumerable<NumbersApp.Models.NumberDto>

@{
    ViewData["Title"] = "Home Page";
}

<div class="btn-group" role="group">
    <div>
        <a class="btn btn-primary btn-lg" role="button" asp-action="Clear">Clear Numbers</a>
    </div>
    <div>
        <a class="btn btn-primary btn-lg" role="button" id="add-button" onclick="addNumber()" href="#">Add Numbers</a>
    </div>
    <div>
        <a class="btn btn-primary btn-lg" role="button" id="sum-button" onclick="sumNumbers()" href="#">Sum Numbers</a>
    </div>
    
</div>

<hr>
<div class="container">
    <div class="row justify-content-start" id="numbers">
        @foreach (var item in Model)
        {
            <div class="number col-2 border border-primary" id="@item.Id">@Html.DisplayFor(i => item.Value)</div>
        }
    </div>

</div>

<hr>
<div class="row justify-content-start">
    <div class="col-1">Count: </div>
    <div class="col-1" id="count">@Model.Count()</div>
</div>
<hr>

<div class="row justify-content-start">
    <div class="col-1">Sum: </div>
    <div class="col-1" id="message">Not summed</div>
</div>